<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridView
        android:id="@+id/gridview_hundred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_barBottom"
        android:cacheColorHint="@color/gris_azulado"
        android:clickable="true"
        android:numColumns="4"
        tools:listitem="@android:layout/simple_list_item_1" >

    </GridView>

    <ImageButton
        android:id="@+id/btnView_Estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/negro"
        android:contentDescription="@string/src_ver_estado"
        android:onClick="InfRifa"
        android:src="@android:drawable/ic_menu_view" />

</RelativeLayout>